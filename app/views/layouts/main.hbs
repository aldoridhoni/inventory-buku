    <style media="screen">
    body {
        padding-top: 70px;
        /* Required padding for .navbar-fixed-top. Remove if using .navbar-static-top. Change if height of navigation changes. */
    }
    .toplogo {
      display: block;
      float: left;
      background-color: #D1F0FF;
      padding: 12px 30px 10px 30px;
      width: 30px;
      margin-left: -5px;
      background-image: url("/img/book-line-icon.png");
      background-position: center;
      background-size: 100px 100px;
    }
    #_author, #_publisher {
      width: 92%;
      display: inline;
    }
    table {
      counter-reset: rowNumber;
    }
    table tbody tr {
      counter-increment: rowNumber;
    }
    table tbody tr td:first-child::before {
        content: counter(rowNumber);
        min-width: 1em;
        margin-right: 0.5em;
    }
    </style>
    <script>
    $(document).ready(function(){
      $('.add_data').click(function(e){
        e.preventDefault();
        popup(this);
       });
       $('#book_create').validate({
         rules: {
           isbn: {required: true, isbn: true},
           title: {required: true,},
           pages: {required: true, integer: true},
           _author: {required: true,},
           _publisher: {required: true,},
           date: {required: true, }
         }
       });
      });
    function popup(trigger) {
      var href = trigger.href;
      href += '?_popup=1';
      var name = trigger.id;
      var win = window.open(href, name, 'height=500,width=800,resizable=yes,scrollbars=yes');
      win.focus();
    }
    $.validator.addMethod("isbn", function (value, element) {
      return this.optional(element) || /^(97(8|9))?\d{9}(\d|X)$/.test(value);
    }, "ISBN 13 numbers start with only 978 or 979");
    </script>
    <title>Inventory Buku</title>
</head>

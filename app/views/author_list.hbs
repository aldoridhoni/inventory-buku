<h2>{{title}}</h2>
<div class="row">
	<div class="col-md-8">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>No</th>
					<th>Nama</th>
					<th>Banyak Buku</th>
					<th>Ubah</th>
					<th>Hapus</th>
				</tr>
			</thead>
			<tbody>
				{{#each authors}}
					<tr>
						<td></td>
						<td>{{name}}</td>
						<!-- <td>{{book}}</td> -->
						<td>{{count}}</td>
						<td><a href="/author/{{id}}/change">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x fa-fw"></i>
								<i class="fa fa-pencil fa-stack-1x fa-inverse fa-fw"></i>
							</span>
							</a></td>
						<td><a href="/author/{{id}}/destroy" onclick="confirm('Yakin dihapus?')" id="hapus">
							<span class="fa-stack fa-lg">
								<i class="fa fa-circle fa-stack-2x fa-fw"></i>
								<i class="fa fa-trash fa-stack-1x fa-inverse fa-fw"></i>
							</span></a></td>
					</tr>
				{{/each}}
			</tbody>
		</table>
		<a class="btn btn-primary btn-outline" href="/author/create">
		<i class="fa fa-plus-square fa-fw"></i>
		Tambah Pengarang</a>
	</div>
	<div class="col-md-4"></div>
</div>
